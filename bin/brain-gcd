#!/usr/bin/env php
<?php

require_once __DIR__ . "/../vendor/autoload.php";

use function BrainGamesProject\Cli\showGreeting;
use function BrainGamesProject\Games\Gcd\getGcdGameCondition;
use function BrainGamesProject\Engine\showGameCondition;
use function BrainGamesProject\Games\Gcd\createGcdGameData;
use function BrainGamesProject\Engine\checkAnswer;
use function BrainGamesProject\Engine\congratulate;

showGreeting();
showGameCondition(getGcdGameCondition());
$userCorrectAnswers = 0;
for ($i = $userCorrectAnswers; $i < SUCCESS; $i++) {
    if (checkAnswer(createGcdGameData()) === true) {
        continue;
    } else {
        return;
    }
}
congratulate();