#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function BrainGamesProject\Engine\makeGame;
use function BrainGamesProject\Cli\showGreeting;
use function BrainGamesProject\Games\Gcd\getGcdGameCondition;
use function BrainGamesProject\Games\Gcd\createGcdGameData;

makeGame([showGreeting(), getGcdGameCondition(), createGcdGameData()]);