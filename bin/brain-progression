#!/usr/bin/env php
<?php

require_once __DIR__ . "/../vendor/autoload.php";

use function BrainGamesProject\Cli\showGreeting;
use function BrainGamesProject\Games\Progression\getProgressionGameCondition;
use function BrainGamesProject\Engine\showGameCondition;
use function BrainGamesProject\Games\Progression\createProgressionGameData;
use function BrainGamesProject\Engine\checkAnswer;
use function BrainGamesProject\Engine\congratulate;

$name = showGreeting();
showGameCondition(getProgressionGameCondition());
$userCorrectAnswers = 0;
for ($i = $userCorrectAnswers; $i < SUCCESS; $i++) {
    if (checkAnswer(createProgressionGameData()) === true) {
        continue;
    } else {
        return;
    }
}
congratulate();
